# AWS Configuration
aws_region  = "us-east-1"
environment = "production"
project_name = "my-eks"
cost_center = "engineering"

# VPC Configuration
vpc_cidr              = "10.0.0.0/16"
enable_nat_gateway    = true
single_nat_gateway    = true  # Set to false for HA (one NAT per AZ)
enable_dns_hostnames  = true
enable_dns_support    = true
enable_flow_logs      = true

# EKS Cluster Configuration
cluster_name                         = "production-eks"
cluster_version                      = "1.28"
cluster_endpoint_private_access      = true
cluster_endpoint_public_access       = true
cluster_endpoint_public_access_cidrs = ["0.0.0.0/0"]  # Restrict to your IP ranges!
enable_cluster_encryption            = true
cluster_enabled_log_types            = ["api", "audit", "authenticator", "controllerManager", "scheduler"]

# Node Group Configuration
node_group_name        = "main-node-group"
node_instance_types    = ["t3.medium"]
node_disk_size         = 50
node_group_min_size    = 2
node_group_max_size    = 5
node_group_desired_size = 2

# Spot Instances (Optional - for cost savings)
enable_spot_instances = false
spot_instance_types   = ["t3.medium", "t3a.medium"]

# Features
enable_cluster_autoscaler  = true
enable_container_insights  = false  # Set to true if you want CloudWatch Container Insights
enable_irsa               = true

# Security
allowed_ssh_cidr_blocks = []  # Add your IP if you need SSH access: ["1.2.3.4/32"]

# Additional Tags
additional_tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Compliance  = "PCI"
}
